<div class="contents">
  <div class="card green lighten-5">
    <p class="z-depth-3"></p>
    <div class="card-content blue-grey-text darken-5">
      <span class="card-title"><%= @content.user.name %></span>
      <p><%= @content.text %></p>
    </div>
    <div class="card-action">
      <% if user_signed_in? %>
        <%= form_for [@content, @comment], url: content_comments_path do |f| %>
          <ul class="collection white">
            <li class="collection-header">
              <h5>
                <%= current_user.name %>
              </h5>
            <li>
            <li class="collection-item">
              <%= f.label :text %>
              <%= f.text_field :text, class: 'secondary-content', placeholder: 'type a message' %>
            </li>
            <%= f.button class: "waves-effect waves-light btn ", type: :submit %>
          </ul>
        <% end %>
      <% end %>
      <% if @comments %>
        <% @comments.each do |comment| %>
            <ul class="collection">
              <li class="collection-item">
                <span class="title"><%= comment.user.name %></span>
                <%= simple_format(comment.text) %>
              </li>
            </ul>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

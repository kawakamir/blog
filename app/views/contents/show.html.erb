<div class="contents">
  <div class="card green lighten-5">
    <p class="z-depth-3"></p>
    <div class="card-content blue-grey-text darken-5">
      <span class="card-title"><%= @content.user.name %></span>
      <p><%= @content.text %></p>
    </div>
    <div class="card-action">
    </div>
  </div>
  <div class= "comments" id="<%=content.id %>">
    <% if @comments %>
      <% @comments.each do |comment| %>
        <%= render partial: "comments", locals:{comment: comment} %>
      <% end %>
    <% end %>
  </div>
  <div class= "comments">
    <% if user_signed_in? %>
      <%= form_for [@content, @comment] do |f| %>
        <ul class="collection white">
          <li class="collection-item">
            <span class="title"><%= current_user.name %></span>
            <%= f.text_field :text, class: 'secondary-content', placeholder: 'コメントをする' %>
          </li>
        </ul>
        <%= f.button class: "waves-effect waves-light btn ", type: :submit %>
      <% end %>
    <% end %>
  </div>
</div>
